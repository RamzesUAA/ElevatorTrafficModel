<Window x:Class="ElevatorModelUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElevatorModelUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">

    <Grid x:Name="myCanvas" Background="LightBlue" Focusable="True" KeyDown="KeiIsDown" KeyUp="KeyIsUp">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Canvas x:Name="control" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="0" Width="auto" Height="auto">
            <Button x:Name="btn_GeneratePassangers" Width="auto"  Content="Generate passangers" Click="btn_GeneratePassangers_Click"  HorizontalAlignment="Center"/>
        </Canvas>
        <Canvas x:Name="build" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Column="1" Width="auto" Height="auto">
            <Rectangle Name="player" Height="50" Width="20" Fill="Red" Canvas.Left="0" Canvas.Bottom="100" Canvas.Top="-49"></Rectangle>
            <Rectangle x:Name="box" Height="35" Width="20" 
                       Canvas.Left="69"
                       Canvas.Bottom="50" Canvas.Top="-39"/>
        </Canvas>


    </Grid>
</Window>
